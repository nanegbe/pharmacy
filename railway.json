{
  "build": {
    "builder": "NIXPACKS",
    "nixpacksPlan": {
      "phases": {
        "setup": {
          "aptPkgs": ["git", "openssl"]
        },
        "install": "npm install",
        "build": "npm run build"
      },
      "variables": {
        "NODE_ENV": "production"
      }
    }
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}